        <!-- 3D Image Suite -->
        <dependency>
            <groupId>mcib</groupId>
            <artifactId>mcib3d-core</artifactId>
            <version>4.0.93</version>
         </dependency>
        <!-- CLIJ -->
        <dependency>
            <groupId>net.haesleinhuepf</groupId>
            <artifactId>clij2_</artifactId>
            <version>2.5.3.1</version>
        </dependency>   
        <dependency>
            <groupId>net.haesleinhuepf</groupId>
